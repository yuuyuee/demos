{
  "master": {
    "log_method": "debug:file:/xxx.log",

    "modules": {
      "kafka": {
        "enable": true,
        "bootstrap": "master.get_task.kafka.bootstrap"
      }
    }
  },

  "worker": {
    "log_method": "debug:file:/xxx.log",

    "source": {
      "comment": "",
      "num_threads": 2,

      "modules": {
        "kafka": {
          "enable": true,
          "bootstrap": "worker.source.get_meta.kafka.bootstrap"
        }
      }
    },

    "parser": {
      "comment": "",
      "num_threads": 2,
      "modules": {}
    },

    "sink": {
      "comment": "",
      "num_threads": 2,

      "modules": {
        "streampipe": {
          "enable": true,
          "address": "work.sink.set_meta.kafka.bootstrap"
        }
      }
    }
  }

}